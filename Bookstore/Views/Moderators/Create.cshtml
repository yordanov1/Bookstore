@model BecomeModeratorFormModel

@{
    ViewData["Title"] = "Become Moderator";
}
<!--<a href="/">
 </a> -->

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <h2 class="heading-margin text-center text-danger">@ViewData["Title"]</h2>
                       
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name ....">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="0887654....">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>

            <div class="mb-5"></div>

            <input class="btn btn-outline-success col-md-12" type="submit" value="Save" />

        </form>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}