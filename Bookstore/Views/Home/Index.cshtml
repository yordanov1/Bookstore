@model IndexViewModel

@{
    ViewData["Title"] = "Welcome!";
}

@{
   var books = Model.Books; 
   var firstBook = books.Any() ? books[0] : null;
   var secondBook = books.Count > 1 ? books[1] : null;
   var thirdBook = books.Count > 2 ? books[2] : null;            
}


@if (!books.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Bookstore!</h1>
        <p class="lead">There are no books in the bookstore currently available!</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Books" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Book</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
      @if (firstBook != null)
     {
       <div class="carousel-item active">
         <img class="d-block w-100" src="@firstBook.ImageUrl" alt="First slide">
         <div class="carousel-caption d-none d-md-block">
             <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@firstBook.Id">@firstBook.BookTitle - @firstBook.Author</a></h5>
         </div>
       </div>
     }

    <div class="carousel-item">
      <img class="d-block w-100" src="@secondBook.ImageUrl" alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
          <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@secondBook.Id">@secondBook.BookTitle - @secondBook.Author</a></h5>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="@thirdBook.ImageUrl" alt="Third slide">
      <div class="carousel-caption d-none d-md-block">
          <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@thirdBook.Id">@thirdBook.BookTitle - @thirdBook.Author</a></h5>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalBooks Books
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalRents Rents!!!
        </h2>
    </div>
</div>