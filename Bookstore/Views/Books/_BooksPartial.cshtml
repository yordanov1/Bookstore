@model IEnumerable<BookServiceModel>

<div class="row">
   @foreach (var book in Model){
     <div class="col-md-4">
         <div class="card">
             <img src="@book.ImageUrl" class="card-img-top" alt="@book.BookTitle - @book.Author">
             <div class="card-body text-center">
                   <h5 class="card-title text-center">@book.BookTitle - @book.Author - @book.GenreName - @book.PublishingHouse - @book.Rating</h5>                  
                   <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" asp-route-information="@book.GetInformation()" class="btn btn-primary">View</a>              
                  @if (ViewBag.AllowBookEdit == true || User.IsAdmin())
                 {
                   <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning">Edit</a>
                   <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>                     
                 }
             </div>
         </div>
     </div>
}
</div> 