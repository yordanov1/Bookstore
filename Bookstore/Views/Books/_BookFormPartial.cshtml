  <div class="col-md-6">
    <label asp-for="Author"></label>
    <input asp-for="Author" class="form-control" placeholder="Yordan Yordanov ....">
    <span asp-validation-for="Author" class="small text-danger"></span>
  </div>

  <div class="col-md-6">
    <label asp-for="ImageUrl"></label>
