    <span asp-validation-for="PublishingHouse" class="small text-danger"></span>
  </div>


  <div class="col-md-6">
    <label asp-for="Rating"></label>
    <input asp-for="Rating" class="form-control" placeholder="Some book ....">
    <span asp-validation-for="Rating" class="small text-danger"></span>
  </div>
  
