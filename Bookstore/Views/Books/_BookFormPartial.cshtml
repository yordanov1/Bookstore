@model BookFormModel


<div class="row">
    <div id="AddBook" class="col-md-6">
        <form method="post">
            <h2 class="heading-margin text-center text-danger">@ViewBag.Title</h2>
            <h3 class="heading-margin text-center text-danger">-----------------------------------------------</h3>

            <div class="form-group">
                <label asp-for="BookTitle"></label>
                <input asp-for="BookTitle" class="form-control" placeholder="Book title ....">
                <span asp-validation-for="BookTitle" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" placeholder="Author ....">
                <span asp-validation-for="Author" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your URL ....">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishingHouse"></label>
                <input asp-for="PublishingHouse" class="form-control" placeholder="Publisher ....">
                <span asp-validation-for="PublishingHouse" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <input asp-for="Rating" class="form-control" placeholder="Choose a number ....">
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Describe ....">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId"></label>
                <select asp-for="GenreId" class="form-control">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
                <span asp-validation-for="GenreId" class="small text-danger"></span>
            </div>

            <div class="mb-5"></div>

            <input class="btn btn-outline-success col-md-12" type="submit" value="Save" />
        </form>
    </div>
</div>


