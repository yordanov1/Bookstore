@model IEnumerable<BookListingViewModel>

<div class="row">
   @foreach (var book in Model){
     <div class="col-md-2">
         <div class="card">
             <img src="@book.ImageUrl" class="card-img-top" alt="@book.BookTitle - @book.Author">
             <div class="card-body text-center">
                   <h5 class="card-title text-center">@book.BookTitle - @book.Author - @book.Genre - @book.PublishingHouse - @book.Rating</h5>                  
                   <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">View More</a>
             </div>
         </div>
     </div>
}
</div>

