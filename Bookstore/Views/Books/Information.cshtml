<div class="row">   
     <div id="center" class="col-md-8 ">
         <div class="card">
             <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.BookTitle - @Model.Author">
             <div class="card-body text-center">
                   <h5 class="card-title text-left">-------------------------------------------------------------------------------------</h5> 
                   <h5 class="card-title text-left">TITLE:         &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    - @Model.BookTitle</h5>                       
                   <h5 class="card-title text-left">AUTHOR:        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    - @Model.Author</h5>  
                   <h5 class="card-title text-left">GENRE:         &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    - @Model.Genre.Name</h5>     
                   <h5 class="card-title text-left">RATING:        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    - @Model.Rating</h5>
                   <h5 class="card-title text-left">DESCRIPITION:  &nbsp;&nbsp;
                                                    - @Model.Description</h5>    
                   <h5 class="card-title text-left">PUBLISHER:     &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    - @Model.PublishingHouse</h5>                      
                   <h5 class="card-title text-left">-------------------------------------------------------------------------------------</h5> 
                                                                                             
                   <a class="btn btn-danger" onclick="history.back()" >Back</a>                    
             </div>
         </div>
     </div>

</div> 